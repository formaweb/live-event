<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <%= csrf_meta_tags %>

  <title>Live Event Dashboard</title>

  <%= stylesheet_link_tag    'admin', media: 'all' %>
</head>
<body class="section <%= section_label %>" data-user-id="<%= current_user.udid %>">
<header role="banner" class="layout header">
  <h1 class="brand"><%= @event.name %></h1>
  <div class="user">
    <span class="connection-status" style="background-color: silver; display: inline-block; width: 10px; height: 10px; border-radius: 100%;"></span>
    OlÃ¡ <%= current_user.name %>
    <%= link_to 'Sair', destroy_user_session_path, method: :delete, :'data-confirm' => 'Tem certeza que deseja sair?' %>
  </div>
  <div class="status"></div>
</header>

<main role="main" class="layout main">
<%= yield %>
</main>

<%= yield :templates %>

<%= javascript_include_tag 'admin' %>
</body>
</html>