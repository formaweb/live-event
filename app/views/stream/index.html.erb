<% content_for :templates do %>
<template class="js-message-template">
<%= render partial: 'message' %>
</template>
<% end %>

<section class="ui video" data-video-id="<%= @event.get_youtube_video_id %>">
  <div class="embed">
    <iframe width="1280" height="720" src="//www.youtube.com/embed/<%= @event.get_youtube_video_id %>?playlist=<%= @event.get_youtube_video_id %>&autoplay=1&controls=2&showinfo=0&rel=0&enablejsapi=1" class="youtube" frameborder="0" allowfullscreen></iframe>
  </div>

  <div class="brand">
    <%= image_tag 'sponsors-p.png', class: 'video-image' %>
    <%= image_tag 'sponsors-g.png', class: 'timeline-image' %>
  </div>
</section>

<section class="ui timeline">
  <article class="collection messages js-messages">
    <% @messages.each do |message| %>
    <%= render partial: 'message', locals: {message: message} %>
    <% end %>
  </article>
</section>

<iframe src="<% if @event.get_youtube_video_id.blank? %><%= @event.video_url %><% end %>" class="navigator<% if @event.get_youtube_video_id.blank? %> show<% end %>" frameborder="0"></iframe>
